<h1>Create Journey</h1>

<%= form_with(model: @journey_detail, url: journeys_path) do |form| %>
  <div >
    <%= form.label :date_of_journey %>
    <%= form.date_field :date_of_journey %>
  </div>

  <div >
    <%= form.label :start_time %>
    <%= form.text_field :start_time %>
  </div>

  <div >
    <%= form.label :end_time %>
    <%= form.text_field :end_time %>
  </div>

  <div >
    <%= form.label :start_loc %>
    <%= form.text_field :start_loc %>
  </div>

  <div >
    <%= form.label :end_loc %>
    <%= form.text_field :end_loc %>
  </div>

  <div>
    <%= form.label :adv_amt %>
    <%= form.text_field :adv_amt%>
  </div>

  <div>
    <%= form.label :no_of_passngr %>
    <%= form.number_field :no_of_passngr %>
  </div>

  <%# <div> %>
    <%# <%= form.label :driver_id %> 
    <%# <%= form.collection_select :driver_id, Driver.all, :id, :name, { prompt: 'Select Driver' } %> 
  <%# </div> %>
  <div class="field">
    <%= form.label :driver_id %>
    <%= form.collection_select :driver_id, @active_drivers, :id, :name %>
  </div>

  <div >
    <%= form.label :taxi_detail_id %>
    <%= form.collection_select :taxi_detail_id, TaxiDetail.all, :id, :taxi_type, { prompt: 'Select Taxi' } %>
  </div>

  <div >
    <%= form.submit 'Create' %>

  </div>
<% end %>
