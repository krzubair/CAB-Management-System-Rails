<div class="container">
  <h1 class="text-center">Enter Your Details to Login</h1>

  <%= form_with(scope: :session, url: signin_path, local: true, class: "my-5") do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label", style: "font-size: 1.2rem" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label", style: "font-size: 1.2rem" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign In", class: "btn btn-primary btn-lg mt-4" %>
      <%= link_to '[ Cancel and return to sign-up page ]', new_user_path, class: "btn btn-secondary btn-lg mt-4" %>
    </div>
  <% end %>
</div>
