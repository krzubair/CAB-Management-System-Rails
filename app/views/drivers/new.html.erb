<div class="container">
  <h1 class="text-center">Create a New Driver</h1>

  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= form_for @driver do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :name, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :gender, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.select :gender, options_for_select(['Male', 'Female', 'Other']), {}, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :phone_no, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :phone_no, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :age, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :age, class: "form-control" %>
          </div>
        </div>


        

        <div class="form-group row mb-3">
          <%= f.label :dl_no, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :dl_no, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password , class: "form-control" %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Create Driver", class: "btn btn-primary" %>
          <%# <%= link_to '[ Cancel and return to sign-in page ]', signin_path, class: "btn btn-secondary btn-lg mt-4" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>
