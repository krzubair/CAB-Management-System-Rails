<h1>All Drivers</h1>
<table class = "table">
    <thead class= "thead">
    <tr>
        <td>Name</td>
        <td>gender</td>
        <td>phone_no</td>
        <td>age</td>
        <td>dl_no</td>
        <td>Status</td>
    
    </tr>
        
    </thead>
    
    <tbody>
        <% @driver.each do |driver|%>
        <tr>
            

            <td><%= driver.name  %></td>
            <td><%= driver.gender %></td>
            <td><%= driver.phone_no %></td>
            <td><%= driver.age %></td>
            <td><%= driver.dl_no %></td>
            <td><%= driver.active %></td>
            
            <% end %>
        </tr>
    </tbody>
</table>
